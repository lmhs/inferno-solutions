.messages
	padding-right 50px
	&__list
		font-size 0
		&-item
			display inline-block
			vertical-align top
			font-size 16px
			padding-y 22px
			& + &:before
				content '/'
				display inline-block
				vertical-align top
				color #CCC
				padding-x 15px


	&__link
		text-decoration none
	&__icon
		width 18px
		height 17px
		color #231F20
		margin-right 11px
		display inline-block
		vertical-align middle
	&__counter
		color #333
		vertical-align middle


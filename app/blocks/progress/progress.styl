.progress
	position relative
	display inline-block
	vertical-align top
	height 40px
	width 100%

	&__caption
		position absolute
		equal()

	&__status
		color #231F20
		font-weight medium
		line-height 40px
		padding-x 10px

	&__divider
		line-height 40px
		font-weight medium
		color rgba(51, 51, 51, .1)

	&__links
		position absolute
		right 0
		top 0
		bottom 0

	&__cancel-link
		display inline-block
		vertical-align top
		height 40px
		line-height 40px
		color rgba(51, 51, 51, 0.5)
		text-decoration none
		padding-x 10px
		&:hover
			color red
			text-decoration none

	&__report-link
		display inline-block
		vertical-align top
		height 40px
		line-height 40px
		color #369
		padding-x 10px
		&:hover
			text-decoration underline

	&__element
		appearance none
		background rgba(51, 51, 51, 0.1)
		border none
		color #f7b644
		height 40px
		width 100%
		&::-webkit-progress-bar
			background rgba(51, 51, 51, 0.1)
		&::-webkit-progress-value
			-webkit-animation moveProgress 2s linear infinite
			background #FFBF47
			background-image repeating-linear-gradient(-65deg,
																						transparent,
																						transparent 10px,
																						#f7b644 10px,
																						#f7b644 20px)
		&::-moz-progress-bar
			background #FFBF47
			background-image repeating-linear-gradient(-65deg,
																						transparent,
																						transparent 10px,
																						#f7b644 10px,
																						#f7b644 20px)


@keyframes moveProgress {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 10px 10px;
  }
}

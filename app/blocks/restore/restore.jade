include ../form/form
include ../field/field
include ../button/button

mixin restore()
	+form.form--restore
		+e.inner
			+e.head
				+e('h2').heading Восстановление доступа
			+e.body
				+e.row
					+input({
						type : 'email',
						caption : 'tooltip',
						id : 'input-email',
						placeholder : 'Email'
					})
				+e.row
					+buttonYellow({strong: 'Восстановить'})
				+e.row
					+e('p').text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet.
		+e.foot
			a(href=jv0).link.form__link.form__foot__link Связаться с администратором
			br
			a(href=jv0).link.form__link.form__foot__link Войти по email


